<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.github.paveltishkin.lightdistance.BeaconFragment">


    <TextView
        android:text="Color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/beacon_color_label_id"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="UUID:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/beacon_uuid_label_id"
        android:layout_below="@+id/beacon_color_label_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="20px"/>

    <TextView
        android:text="Major:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/beacon_uuid_major_id"
        android:layout_below="@+id/beacon_uuid_label_id"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginRight="35px" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/beacon_major_value_id"
        android:text="00000"
        android:layout_below="@+id/beacon_uuid_value_id"
        android:layout_toRightOf="@+id/beacon_uuid_major_id"
        android:layout_toEndOf="@+id/beacon_uuid_major_id" />

    <TextView
        android:text="Minor:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/beacon_minor_label_id"
        android:layout_below="@+id/beacon_uuid_value_id"
        android:layout_toRightOf="@+id/beacon_major_value_id"
        android:layout_toEndOf="@+id/beacon_major_value_id"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="35px" />

    <TextView
        android:text="00000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/beacon_minor_value_id"
        android:layout_below="@+id/beacon_uuid_value_id"
        android:layout_toRightOf="@+id/beacon_minor_label_id"
        android:layout_toEndOf="@+id/beacon_minor_label_id" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/beacon_uuid_value_id"
        android:text="00000000-0000-0000-0000-000000000000"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:layout_alignBaseline="@+id/beacon_uuid_label_id"
        android:layout_alignBottom="@+id/beacon_uuid_label_id"
        android:layout_toRightOf="@+id/beacon_uuid_label_id"
        android:layout_toEndOf="@+id/beacon_uuid_label_id" />

</RelativeLayout>
